{
  "name": "seu-planner",
  "version": "1.0.0",
  "description": "Saudi Electronic University Study Planner - مخطط دراسي للجامعة السعودية الإلكترونية",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
